# Jira Configuration
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your.email@company.com
JIRA_API_TOKEN=your-jira-api-token-here
JIRA_PROJECT_KEY=YOUR_PROJECT
JIRA_JQL=project = YOUR_PROJECT AND resolution = Unresolved

# Azure DevOps / TFS Configuration
ADO_SERVER=http://tfsserver:8080/tfs
ADO_COLLECTION=YourCollection
ADO_PROJECT=YourProject
ADO_PAT=your-ado-personal-access-token

# File Paths
JIRA_INPUT_FILE=path/to/jira_data.json
OUTPUT_FILE=path/to/output_report.xlsx

# Data Source: Use "API" to fetch from Jira API, or "FILE" to use JSON file
DATA_SOURCE=FILE
